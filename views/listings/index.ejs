    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            color: #fff !important;
        }
 
        .courier-prime-regular {
            font-family: "Courier Prime", monospace;
            font-weight: 400;
            font-style: normal;
        }
 
        .courier-prime-regular-italic {
            font-family: "Courier Prime", monospace;
            font-weight: 400;
            font-style: italic;
        }
 
        .courier-prime-bold {
            font-family: "Courier Prime", monospace;
            font-weight: 700;
            font-style: normal;
        }
 
        .courier-prime-bold-italic {
            font-family: "Courier Prime", monospace;
            font-weight: 700;
            font-style: italic;
        }
        .wrapper{
            width: 100%;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
 
        body {
           
            background: url("https://images.pexels.com/photos/2166456/pexels-photo-2166456.jpeg?cs=srgb&dl=pexels-quang-nguyen-vinh-2166456.jpg&fm=jpg");
            backdrop-filter: blur(2px);
            background-repeat: no-repeat;
            background-size: cover;
        }
 
        .card {
            width: 320px;
            height: 400px;
            border-radius: 20px;
            overflow: hidden;
            border: 5px solid #fff;
            position: relative;
            margin-bottom: 20px;
        }
 
        .card-img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 15px;
        }
 
        .card-body {
            width: 100%;
            height: 100%;
            top: 0;
            right: -100%;
            position: absolute;
            background: #1f3d4738;
            backdrop-filter: blur(4px);
            border-radius: 15px;
            color: #fff;
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: 1.5s;

        }
 
        .card:hover .card-body {
            right: 0;
            color: white !important;
        }
 
        .card-title {
            text-transform: uppercase;
            font-size: 24px;
            font-weight: 500;
            margin-bottom: 10px;
        }
 
        .card-sub-title {
            text-transform: capitalize;
            font-size: 14px;
            font-weight: 300;
            margin-bottom: 10px;
        }
 
        .card-info {
            font-size: 16px;
            line-height: 25px;
            margin-bottom: 20px;
        }
 
        .card-btn {
            color: black;
            background: beige;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            text-transform: capitalize;
            border: none;
            outline: none;
            font-weight: 500;
            cursor: pointer;
        }
 
        .btns {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }
 
        .edit-btn {
            margin-right: 10px; /* Add margin between the buttons */
        }
